@model Product
<div class="row">
    <div class="col-md-8 mx-auto" >
        <h1 class="text-center">@Model.Name </h1>
        <h3 class="text-center">@Model.Price rub</h3>
        <h3 class="text-center">@Model.Weight kg</h3>
        
    </div>
</div>
<div id="Submit"></div>
<div id="result"></div>
@section Scripts{
    <script>
        $("#").add(function()
        {
            var url ="@Url.Action("Details","Product")";
          
            $.post(url, function(res){
                $("#result").html(res);
            });
        })
    </script>
}