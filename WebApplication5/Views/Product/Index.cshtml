
@using System.Runtime.InteropServices.JavaScript
@model IEnumerable<Product>
<table class="table table-bordered table-striped" 
       style="width:100%">
    <thead>
    <tr>
        <th>Имя</th>
        <th>Цена</th>
        <th>Вес</th>
        <th></th>
        <th></th>
        <th></th>
        <th>
            <a asp-controller="Product" asp-action="Add">Добавить</a>
        </th>
        
    </tr>
    </thead>
    <tbody>
    @{
        foreach(var obj in Model)
        {
            <tr>
                
                <td>@obj.Name</td>
                <td>@obj.Price rub</td>
                <td>@obj.Weight kg</td>

                <td>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id">Изменить</a>
                </td>
                <td>
                    <a asp-controller="Product" asp-action="Details"
                       asp-route-id="@obj.Id">Подробнее</a>
                </td>
                <td>
                    <form asp-route-id="@obj.Id" asp-action="Delete" asp-controller="Product" method="post">

                        <a href="#" onclick="this.parentNode.submit()">Удалить</a>

                    </form>
                </td>
                
            </tr>
        }
    }
    </tbody>
</table>